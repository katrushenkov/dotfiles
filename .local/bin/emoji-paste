#!/bin/bash

hyprctl \
  --batch "$(
    hyprctl devices -j |
      jq -r '.keyboards[] | .name' |
      while IFS= read -r keyboard; do
        printf '%s %s %s;' 'switchxkblayout' "${keyboard}" '0'
      done
  )" &> /dev/null

if pgrep -x "rofimoji"; then
  wtype -k ESCAPE
  exit 0
else
  rofimoji --selector tofi --action copy --skin-tone light --selector-args='-c /home/ser/.config/tofi/config_emoji'
fi

# | xargs wl-paste -t text
# --selector-args="-theme solarized -font 'Hack 12' -monitor ${MONITOR_ID}"
