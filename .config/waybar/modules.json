{
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "I",
            "2": "II",
            "3": "III",
            "4": "IV",
            //"5": "V",
            //"6": "VI",
            //"7": "VII",
            //"8": "VIII",
            //"9": "IX",
            //"10": "X",
            "urgent": "ÔÅ™",
            // "active": "ÔÜí",
            //"default": "ÔÑë"
            "firefox": "Ôâ©",
            "whatsapp": "Ôà≤"
        },
        "on-click": "activate",
        "all-outputs": true,
        "show-only-current-monitor": true,
        "sort-by-number": true,
        "active-only": false,
        "show-special": true,
        "special-visible-only": true,
        "persistent-workspaces": {
           //"*": 4, // 5 workspaces by default on every monitor
           //"DVI-D-1", // but only three on HDMI-A-1
           //"DVI-D-1", // but only three on HDMI-A-1
           //"HDMI-A-1", // but only three on HDMI-A-1
           //"HDMI-A-1", // but only three on HDMI-A-1
          "1": ["HDMI-A-1"],
          "2": ["HDMI-A-1"],
          "3": ["DVI-D-1"],
          "4": ["DVI-D-1"],
        }
    },
    "hyprland/window": {
        "format": "<span foreground=\"#A7C080\">Ôãê </span> {}",
        "max-length": 100,
        "separate-outputs": true
    },
    "clock": {
        "format":  "{:%A, %d %b - ÔÄó  %H:%M}",
        "format-alt": "{:%H:%M}",
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "<span foreground=\"#A7C080\">{icon}</span> {percent}% ",
        "format-icons": [
            "ÔÜÖ",
            "ÔÑë"
        ],
        "on-click": "pkill -USR1 gammastep || gammastep",
        "tooltip-format": "Brightness"
    },
    "pulseaudio": {
        "format": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\">{icon}</span> {volume}% ",
        "format-bluetooth": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\">Ôäî</span> {volume}% ",
        "format-muted": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\">ÔÄ¶</span> ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "default": [
                "ÔÄß  ",
                "ÔÄ®  "
            ]
        },
        "scroll-step": 1,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "ignored-sinks": [
            "Easy Effects Sink"
        ]
    },
    "network": {
        "format": "<span foreground=\"#3D484D\">|</span> {ifname}",
        "format-wifi": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\">Ôá´</span> {signalStrength}%",
        "format-ethernet": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\">Û∞äó </span> {ipaddr}/{cidr}",
        "format-disconnected": "",
        "tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50
    },
    "hyprland/language": {
        "format": "<span foreground=\"#A7C080\">Û∞åå </span> {short} <span foreground=\"#3D484D\">|</span>"
    },
    "keyboard-state": {
        "capslock": true,
        "format": " <span foreground=\"#A7C080\">Û∞™õ</span> {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "disk": {
        "interval": 60,
        "format": "<span foreground=\"#A7C080\" weight=\"bold\">/</span> {percentage_used}% ",
        "path": "/"
    },
    "cpu": {
        "format": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\" weight=\"bold\">CPU</span> {usage}% "
    },
    "memory": {
        "format": "<span foreground=\"#3D484D\">|</span> <span foreground=\"#A7C080\" weight=\"bold\">RAM</span> {}% "
    },
    "custom/wlogout": {
        "format": "‚èª",
        "on-click": "wlogout",
        "tooltip": false
    },
    "tray":{
      	"icon-size":18,
      	"spacing": 10
    },
    "custom/recording": {
        "format": "üî¥ recording",
        "exec": "ps aux | grep \"[h]yprcap\"",
        "exec-if": "exit 0",
        "signal": 1,
        "escape": true,
        "on-click": "notify-send test"
    },
    "custom/inbox": {
        "format": "<span foreground=\"#A7C080\" weight=\"bold\">{}</span> unread <span foreground=\"#3D484D\">|</span> ",
        "exec": "sh /home/ser/.local/bin/ksm/get-outlook-unseen",
        "exec-if": "exit 0",
        "interval": 10,
        "on-click": "notify-send test"
    },
    "custom/vpn": {
        "format": "<span foreground=\"#A7C080\" weight=\"bold\">VPN</span> {}",
        "tooltip": false,
        "exec": "echo $(systemctl is-active v2raya.service)",
        "exec-on-event": true,
        //"interval": 60,
        "signal": 10,
        "on-click": "/home/ser/.local/bin/statusbar/wb-vpn"
    },
}
